/* blockquotes */

blockquote {
  margin: 0 0 var(--block-element-margin-bottom, 1rem);
  padding: 0;
  & p {
    margin-bottom: 0;
    font-size: var(--blockquote-font-size, var(--font-size-large, var(--font-size-4, 1.5rem)));
    line-height: var(--blockquote-line-height, var(--heading-line-height, 1.4));
  }
  & cite {
    display: block;
    margin-top: 0.25rem;
    color: var(--blockquote-citation-color, var(--gray-light, hsl(0, 0%, 60%)));
    &::before {
      content: '\2014 \00A0'; /* em dash, nbsp */
    }
  }
}

/* citations */

cite {
  font-style: normal;
}
