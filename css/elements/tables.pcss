/* tables */

table {
  width: 100%;
  max-width: 100%;
  margin: 0 0 var(--block-element-margin-bottom, 1rem);
  border-collapse: collapse;
  border-spacing: 0;
}

caption {
  caption-side: bottom;
  text-align: inherit;
}

@custom-selector :--table-cell
  th,
  td;

:--table-cell {
  padding: var(--table-cell-padding-vertical, 0.5rem) var(--table-cell-padding-horizontal, 0.75rem);
  border-top: var(--table-cell-border-width, 1px) solid var(--table-cell-border-color, var(--gray-lighter, hsl(220, 10%, 90%)));
  text-align: inherit;
  vertical-align: top;
}

thead :--table-cell {
  border-top: 0;
  border-bottom: var(--table-foot-border-width, var(--table-cell-border-width, 1px)) solid var(--table-cell-border-color, var(--gray-lighter, hsl(220, 10%, 90%)));
  vertical-align: bottom;
}

tfoot :--table-cell {
  border-top: var(--table-head-border-width, var(--table-cell-border-width, 1px)) solid var(--table-cell-border-color, var(--gray-lighter, hsl(220, 10%, 90%)));
  vertical-align: top;
}

th {
  background-color: var(--table-heading-background-color, var(--gray-lightest, hsl(220, 10%, 95%)));
  font-weight: var(--table-heading-font-weight, var(--font-weight-medium, 500));
  color: var(--table-heading-text-color, var(--gray, hsl(220, 10%, 40%)));
}

tbody + tbody {
  border-top: var(--table-head-border-width, var(--table-cell-border-width, 1px)) solid var(--table-cell-border-color, var(--gray-lighter, hsl(220, 10%, 90%)));
}

table caption {
  padding: var(--table-caption-padding-vertical, 0.75rem) 0;
  font-weight: var(--table-caption-font-weight, var(--font-weight-normal, 400));
  color: var(--table-caption-text-color, var(--gray-light, hsl(0, 0%, 60%)));
}
