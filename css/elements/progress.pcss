/* progress elements */

progress {
  border: none;
  vertical-align: baseline;
  -webkit-appearance: none;
  -moz-appearance: none;
  &[value] {
    width: 100%;
    height: 1rem;
  }
  &::-webkit-progress-bar {
    background-color: var(--hiq-progress-background-color, var(--hiq-gray-lighter, hsl(220, 10%, 90%)));
  }
  &::-webkit-progress-value {
    background-color: var(--hiq-progress-filled-color, var(--hiq-color-primary, hsl(210, 100%, 50%)));
  }
  &::-moz-progress-bar {
    background-color: var(--hiq-progress-filled-color, var(--hiq-color-primary, hsl(210, 100%, 50%)));
  }
}
